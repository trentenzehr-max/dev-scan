{
  "manifest_version": 3,
  "name": "DA Quick Lookup",
  "version": "1.2",
  "description": "Hover on DA and click a button to open Twitter + Solscan.",
  "permissions": ["scripting", "tabs", "activeTab", "clipboardRead"],
  "host_permissions": [
    "https://axiom.trade/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://solscan.io/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://axiom.trade/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Run DA Search"
  }
}
